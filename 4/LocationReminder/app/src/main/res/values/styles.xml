<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- FirebaseUI Styling
        - Logo: FirebaseUI.AuthMethodPicker.Logo
        - Text: FirebaseUI.Text
        - Text.Link: FirebaseUI.Text.Link
        - EditText: TextInputEditText
        - ref: https://github.com/firebase/FirebaseUI-Android/blob/master/auth/README.md#custom-layout
    -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <!--  <item name="android:windowBackground">@color/gray_dark</item> -->
    </style>



    <style name="LRButton" >
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
