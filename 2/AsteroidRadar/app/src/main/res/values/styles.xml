<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default text color -->
        <item name="android:textViewStyle">@style/AppText</item>
        <!-- Option menu background -->
        <item name="android:itemBackground">@color/app_background</item>
    </style>

    <style name="AppText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="AppText.OverlayText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_overlay</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/overlay_text_background</item>
    </style>

    <style name="AppText.ListTitle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText.ListSubtitle" >
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
</resources>
